<?xml version="1.0" encoding="utf-8"?>
<plugin id="notifaccess" version="1.0.0" xmlns="http://apache.org/cordova/ns/plugins/1.0">
  <name>notifaccess</name>

  <js-module src="www/notifaccess.js" name="NotifAccess">
    <clobbers target="NotifAccess" />
  </js-module>

  <platform name="android">
    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="NotifAccess">
        <param name="android-package" value="com.yourapp.notifaccess.NotifAccess" />
      </feature>
    </config-file>

    <source-file src="src/android/NotifAccess.java" target-dir="src/com/yourapp/notifaccess" />
  </platform>
</plugin>
