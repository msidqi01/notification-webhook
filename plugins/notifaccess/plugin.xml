<?xml version="1.0" encoding="utf-8"?>
<plugin id="notifaccess" version="1.0.0"
        xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">

  <name>notifaccess</name>
  <description>Open Notification Access settings on app start if not enabled</description>

  <platform name="android">

    <!-- Cordova Android 10+ (AndroidX) support -->
    <framework src="androidx.core:core:1.12.0" />

    <!-- Register plugin class -->
    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="NotifAccess">
        <param name="android-package" value="com.notifaccess.NotifAccess" />
        <param name="onload" value="true" />
      </feature>
    </config-file>

    <!-- Copy native Java file -->
    <source-file src="src/android/NotifAccess.java"
                 target-dir="app/src/main/java/com/notifaccess" />

    <!-- (Opsional) Kalau kamu butuh permission khusus, taruh di sini.
         Notification Listener sendiri tidak butuh permission manifest manual,
         karena user harus enable dari Settings. -->

  </platform>

</plugin>
