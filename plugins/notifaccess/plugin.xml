<?xml version="1.0" encoding="UTF-8"?>
<plugin id="com.dormasaaktif.notifaccess"
        version="1.0.0"
        xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">

  <name>NotifAccess</name>
  <description>Notification Access Helper</description>
  <license>MIT</license>
  <keywords>notification, listener, permission</keywords>

  <js-module src="www/notifaccess.js" name="NotifAccess">
    <clobbers target="window.NotifAccess" />
  </js-module>

  <platform name="android">
    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="NotifAccess">
        <param name="android-package" value="com.dormasaaktif.notifaccess.NotifAccess"/>
      </feature>
    </config-file>

    <source-file src="src/android/NotifAccess.java" target-dir="src/com/dormasaaktif/notifaccess" />
  </platform>

</plugin>
